<ivy-module version="2.0"
            xmlns:e="http://ant.apache.org/ivy/extra"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="org.sosy_lab" module="javasmt-solver-bitwuzla">
      <license name="MIT License" url="https://github.com/bitwuzla/bitwuzla/blob/main/COPYING"/>
        <description>
            Bitwuzla solver and JavaSMT JNI wrapper.
            Bitwuzla is provided under the MIT License.
        </description>
    </info>

    <configurations>
        <!-- TODO: Add windows support -->
        <conf name="solver-bitwuzla" />
        <conf name="solver-bitwuzla" extends="solver-bitwuzla-linux"/>
        <conf name="solver-bitwuzla-linux" extends="solver-bitwuzla-common"/>
        <conf name="solver-bitwuzla-common" visibility="private"/>
        <conf name="sources"/>
        <conf name="javadoc"/>
    </configurations>

    <publications defaultconf="solver-bitwuzla">
        <!-- Linux native libraries -->
        <artifact name="libbitwuzlaJNI" conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <artifact name="libbitwuzla" conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <artifact name="libbitwuzlabb"  conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <artifact name="libbitwuzlabv"  conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <artifact name="libbitwuzlals"  conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <artifact name="libgmp" conf="solver-bitwuzla" type="shared-object" ext="so"/>
        <!-- Java code, docs and source -->
        <artifact name="bitwuzla" conf="solver-bitwuzla-common" ext="jar"/>
        <artifact name="bitwuzla" conf="sources" e:classifier="sources" type="source" ext="jar"/>
        <artifact name="bitwuzla" conf="javadoc" e:classifier="javadoc" type="javadoc" ext="jar"/>
    </publications>

    <dependencies></dependencies>

</ivy-module>
